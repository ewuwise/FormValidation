### **2. Enhanced App.js**
```javascript
import React from 'react';
import { SafeAreaProvider } from 'react-native-safe-area-context';
import { StatusBar } from 'expo-status-bar';
import { StyleSheet, View } from 'react-native';
import RegistrationScreen from './src/screens/RegistrationScreen';

export default function App() {
  return (
    <SafeAreaProvider>
      <StatusBar style="auto" />
      <View style={styles.container}>
        <RegistrationScreen />
      </View>
    </SafeAreaProvider>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#f5f8ff',
  },
});
```

### **3. Enhanced RegistrationScreen.js**
```javascript
import React, { useState } from 'react';
import {
  View,
  Text,
  ScrollView,
  TouchableOpacity,
  Alert,
  KeyboardAvoidingView,
  Platform,
} from 'react-native';
import { Formik } from 'formik';
import * as Yup from 'yup';
import Icon from 'react-native-vector-icons/MaterialIcons';
import Modal from 'react-native-modal';
import { KeyboardAwareScrollView } from 'react-native-keyboard-aware-scroll-view';

// Components
import FormInput from '../components/FormInput';
import PasswordStrength from '../components/PasswordStrength';
import TermsModal from '../components/TermsModal';

// Utils
import { phoneFormatter, formatDate } from '../utils/formatters';
import { validateEmail, validatePhone, validatePassword } from '../utils/validators';

// Styles
import styles from '../styles/theme';

// Validation Schema
const validationSchema = Yup.object().shape({
  fullName: Yup.string()
    .min(3, 'Full name must be at least 3 characters')
    .max(50, 'Full name must be less than 50 characters')
    .required('Full name is required')
    .matches(/^[a-zA-Z\s]+$/, 'Name can only contain letters and spaces'),
  
  email: Yup.string()
    .email('Please enter a valid email address')
    .required('Email is required')
    .test('email-format', 'Invalid email format', validateEmail),
  
  phone: Yup.string()
    .required('Phone number is required')
    .test('phone-format', 'Phone must be 10 digits', validatePhone),
  
  dateOfBirth: Yup.date()
    .max(new Date(Date.now() - 568024668000), 'You must be at least 18 years old')
    .required('Date of birth is required'),
  
  password: Yup.string()
    .min(8, 'Password must be at least 8 characters')
    .required('Password is required')
    .test('password-strength', 'Password too weak', validatePassword),
  
  confirmPassword: Yup.string()
    .oneOf([Yup.ref('password'), null], 'Passwords must match')
    .required('Confirm password is required'),
  
  termsAccepted: Yup.boolean()
    .oneOf([true], 'You must accept the terms and conditions')
    .required('Required'),
});

const RegistrationScreen = () => {
  const [isSubmitting, setIsSubmitting] = useState(false);
  const [showPassword, setShowPassword] = useState(false);
  const [showConfirmPassword, setShowConfirmPassword] = useState(false);
  const [isTermsModalVisible, setTermsModalVisible] = useState(false);

  const handleSubmit = async (values, { resetForm }) => {
    setIsSubmitting(true);
    
    // Simulate API call
    await new Promise(resolve => setTimeout(resolve, 1500));
    
    console.log('Registration Data:', {
      ...values,
      dateOfBirth: formatDate(values.dateOfBirth),
    });
    
    setIsSubmitting(false);
    resetForm();
    
    Alert.alert(
      'Registration Successful!',
      `Welcome ${values.fullName}! Your account has been created successfully.`,
      [
        {
          text: 'OK',
          style: 'default',
        }
      ]
    );
  };

  const initialValues = {
    fullName: '',
    email: '',
    phone: '',
    dateOfBirth: '',
    password: '',
    confirmPassword: '',
    termsAccepted: false,
  };

  return (
    <KeyboardAwareScrollView
      style={styles.container}
      contentContainerStyle={styles.contentContainer}
      enableOnAndroid={true}
      extraScrollHeight={20}
      keyboardShouldPersistTaps="handled"
    >
      <View style={styles.header}>
        <Icon name="person-add" size={40} color="#4a6fa5" />
        <Text style={styles.title}>Create Account</Text>
        <Text style={styles.subtitle}>Join our community today</Text>
      </View>

      <Formik
        initialValues={initialValues}
        validationSchema={validationSchema}
        onSubmit={handleSubmit}
        validateOnChange={true}
        validateOnBlur={true}
      >
        {({
          handleChange,
          handleBlur,
          handleSubmit,
          values,
          errors,
          touched,
          setFieldValue,
          isValid,
          dirty,
        }) => (
          <View style={styles.formContainer}>
            {/* Full Name */}
            <FormInput
              label="Full Name"
              placeholder="Enter your full name"
              value={values.fullName}
              onChangeText={handleChange('fullName')}
              onBlur={handleBlur('fullName')}
              error={touched.fullName && errors.fullName}
              icon="person"
              autoCapitalize="words"
            />

            {/* Email */}
            <FormInput
              label="Email Address"
              placeholder="you@example.com"
              value={values.email}
              onChangeText={handleChange('email')}
              onBlur={handleBlur('email')}
              error={touched.email && errors.email}
              icon="email"
              keyboardType="email-address"
              autoCapitalize="none"
            />

            {/* Phone */}
            <FormInput
              label="Phone Number"
              placeholder="(123) 456-7890"
              value={phoneFormatter(values.phone)}
              onChangeText={(text) => {
                const numbers = text.replace(/\D/g, '');
                setFieldValue('phone', numbers.substring(0, 10));
              }}
              onBlur={handleBlur('phone')}
              error={touched.phone && errors.phone}
              icon="phone"
              keyboardType="phone-pad"
              maxLength={14}
            />

            {/* Date of Birth */}
            <FormInput
              label="Date of Birth"
              placeholder="MM/DD/YYYY"
              value={values.dateOfBirth}
              onChangeText={handleChange('dateOfBirth')}
              onBlur={handleBlur('dateOfBirth')}
              error={touched.dateOfBirth && errors.dateOfBirth}
              icon="calendar-today"
            />

            {/* Password with strength meter */}
            <View style={styles.passwordContainer}>
              <FormInput
                label="Password"
                placeholder="At least 8 characters"
                value={values.password}
                onChangeText={handleChange('password')}
                onBlur={handleBlur('password')}
                error={touched.password && errors.password}
                icon="lock"
                secureTextEntry={!showPassword}
                rightIcon={showPassword ? 'visibility-off' : 'visibility'}
                onRightIconPress={() => setShowPassword(!showPassword)}
              />
              {values.password.length > 0 && (
                <PasswordStrength password={values.password} />
              )}
            </View>

            {/* Confirm Password */}
            <FormInput
              label="Confirm Password"
              placeholder="Re-enter your password"
              value={values.confirmPassword}
              onChangeText={handleChange('confirmPassword')}
              onBlur={handleBlur('confirmPassword')}
              error={touched.confirmPassword && errors.confirmPassword}
              icon="lock-outline"
              secureTextEntry={!showConfirmPassword}
              rightIcon={showConfirmPassword ? 'visibility-off' : 'visibility'}
              onRightIconPress={() => setShowConfirmPassword(!showConfirmPassword)}
            />

            {/* Terms & Conditions */}
            <TouchableOpacity
              style={styles.termsContainer}
              onPress={() => setFieldValue('termsAccepted', !values.termsAccepted)}
            >
              <View style={styles.checkbox}>
                {values.termsAccepted ? (
                  <Icon name="check-box" size={24} color="#4a6fa5" />
                ) : (
                  <Icon name="check-box-outline-blank" size={24} color="#666" />
                )}
              </View>
              <View style={styles.termsTextContainer}>
                <Text style={styles.termsText}>
                  I agree to the{' '}
                  <Text
                    style={styles.termsLink}
                    onPress={() => setTermsModalVisible(true)}
                  >
                    Terms and Conditions
                  </Text>
                </Text>
                {touched.termsAccepted && errors.termsAccepted && (
                  <Text style={styles.errorText}>{errors.termsAccepted}</Text>
                )}
              </View>
            </TouchableOpacity>

            {/* Submit Button */}
            <TouchableOpacity
              style={[
                styles.submitButton,
                (!isValid || !dirty || isSubmitting) && styles.submitButtonDisabled,
              ]}
              onPress={handleSubmit}
              disabled={!isValid || !dirty || isSubmitting}
            >
              {isSubmitting ? (
                <View style={styles.loadingContainer}>
                  <Icon name="refresh" size={20} color="#fff" style={styles.spinner} />
                  <Text style={styles.submitButtonText}>Creating Account...</Text>
                </View>
              ) : (
                <>
                  <Icon name="check-circle" size={20} color="#fff" />
                  <Text style={styles.submitButtonText}>Create Account</Text>
                </>
              )}
            </TouchableOpacity>

            {/* Login Link */}
            <View style={styles.loginContainer}>
              <Text style={styles.loginText}>Already have an account? </Text>
              <TouchableOpacity>
                <Text style={styles.loginLink}>Sign In</Text>
              </TouchableOpacity>
            </View>
          </View>
        )}
      </Formik>

      {/* Terms Modal */}
      <TermsModal
        isVisible={isTermsModalVisible}
        onClose={() => setTermsModalVisible(false)}
      />
    </KeyboardAwareScrollView>
  );
};

export default RegistrationScreen;
```

### **4. FormInput.js Component**
```javascript
import React from 'react';
import { View, Text, TextInput, TouchableOpacity } from 'react-native';
import Icon from 'react-native-vector-icons/MaterialIcons';
import styles from '../styles/theme';

const FormInput = ({
  label,
  placeholder,
  value,
  onChangeText,
  onBlur,
  error,
  icon,
  rightIcon,
  onRightIconPress,
  secureTextEntry = false,
  keyboardType = 'default',
  autoCapitalize = 'none',
  maxLength,
}) => {
  return (
    <View style={styles.inputContainer}>
      <Text style={styles.inputLabel}>{label}</Text>
      <View style={[styles.inputWrapper, error && styles.inputError]}>
        {icon && (
          <Icon
            name={icon}
            size={20}
            color={error ? '#ff6b6b' : '#4a6fa5'}
            style={styles.inputIcon}
          />
        )}
        <TextInput
          style={styles.inputField}
          placeholder={placeholder}
          placeholderTextColor="#999"
          value={value}
          onChangeText={onChangeText}
          onBlur={onBlur}
          secureTextEntry={secureTextEntry}
          keyboardType={keyboardType}
          autoCapitalize={autoCapitalize}
          maxLength={maxLength}
        />
        {rightIcon && (
          <TouchableOpacity onPress={onRightIconPress} style={styles.rightIcon}>
            <Icon
              name={rightIcon}
              size={20}
              color="#666"
            />
          </TouchableOpacity>
        )}
      </View>
      {error && (
        <View style={styles.errorContainer}>
          <Icon name="error-outline" size={14} color="#ff6b6b" />
          <Text style={styles.errorText}>{error}</Text>
        </View>
      )}
    </View>
  );
};

export default FormInput;
```

### **5. PasswordStrength.js Component**
```javascript
import React from 'react';
import { View, Text } from 'react-native';
import Icon from 'react-native-vector-icons/MaterialIcons';
import styles from '../styles/theme';

const PasswordStrength = ({ password }) => {
  const calculateStrength = (pass) => {
    let score = 0;
    if (pass.length >= 8) score++;
    if (/[A-Z]/.test(pass)) score++;
    if (/[0-9]/.test(pass)) score++;
    if (/[^A-Za-z0-9]/.test(pass)) score++;
    return score;
  };

  const strength = calculateStrength(password);
  const strengthLabels = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
  const strengthColors = ['#ff6b6b', '#ffa726', '#ffca28', '#42a5f5', '#4caf50'];

  const getStrengthBars = () => {
    return Array.from({ length: 4 }).map((_, index) => (
      <View
        key={index}
        style={[
          styles.strengthBar,
          {
            backgroundColor: index < strength ? strengthColors[strength] : '#e0e0e0',
          },
        ]}
      />
    ));
  };

  return (
    <View style={styles.strengthContainer}>
      <View style={styles.strengthBars}>{getStrengthBars()}</View>
      <View style={styles.strengthInfo}>
        <Text style={styles.strengthLabel}>Strength: </Text>
        <Text style={[styles.strengthValue, { color: strengthColors[strength] }]}>
          {strengthLabels[strength]}
        </Text>
        {strength < 4 && (
          <Icon name="info" size={14} color="#666" style={styles.infoIcon} />
        )}
      </View>
      {strength < 4 && password.length > 0 && (
        <Text style={styles.strengthHint}>
          Tip: Include uppercase, numbers, and special characters
        </Text>
      )}
    </View>
  );
};

export default PasswordStrength;
```

